<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <!-- Explicitly include only Api project source files -->
  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="Dawning.Generator.*\**\*.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="Dawning.Generator.Application\Dawning.Generator.Application.csproj" />
    <ProjectReference Include="Dawning.Generator.Infrastructure\Dawning.Generator.Infrastructure.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
  </ItemGroup>

</Project>
