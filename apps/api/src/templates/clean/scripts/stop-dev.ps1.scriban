# {{project_name}} 停止开发环境脚本 (Windows PowerShell)
# 使用方法: .\scripts\stop-dev.ps1

$ErrorActionPreference = "Stop"

Write-Host "停止 {{project_name}} 开发环境..." -ForegroundColor Yellow

Push-Location $PSScriptRoot\..
try {
    docker-compose down
    Write-Host "开发环境已停止" -ForegroundColor Green
} finally {
    Pop-Location
}
